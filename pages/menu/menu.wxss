.food-reduce-view,.food-add-view{
  height: 50%;
  width: 10%;
  font-size:16px;
  color:#e02d3f;
  border:1px solid #d6d3d3;
  border-radius:37px;
  display: flex;
  flex-direction: row;
  align-items:center;
  justify-content: center;
}
.food-num-view{
  width: 30%;
}
.food-add-view{
  width: 30%;
}
.food-add-image,.food-num-view,.food-reduce-image{
  width: 20%;
  height: 90%;
  float: right;
  display: flex;
  flex-direction: row;
  align-items:center;
  justify-content: flex-end;
}
.food-num-view{
  justify-content: center;
}
