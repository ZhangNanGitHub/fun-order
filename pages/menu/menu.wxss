.container{
  position:absolute;
  flex-direction:column;
  width: 100%; 
  height: 100%;
  font-size:32rpx;
  overflow-y: hidden;
}
.body-top{
  position:absolute;
  height: 25%;
  width: 100%;
}
swiper,swiper-item,.img-banner{
  width: 100%;
  height: 100%;
}
.body-middle{
  position: relative;
  flex-direction: row;
  width: 100%;
  height: 65%;
  top: 25%;
}
.bottom-view{
  position: absolute;
  width: 100%;
  height: 10%;
  top: 90%;
  background-color: #e02d3f
}
.middle-left{
  float: left; 
  height: 100%;
  width: 20%;
  background-color:#f5f0e9;
  /* z-index:1; */
}
.middle-right{
  float: right; 
  height: 100%;
  width: 80%;
  background: yellow;
}
.food-types-img{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items:center;
}
.food-types-remark{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items:center;
  font-size:12px;
  color: gray;
}
.food-price{
  height: 100%;
  width: 48%;
  float: left;
  border-right: 1px solid white;
}
.choose-done{
  float: right;
  height: 100%;
  width: 30%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items:center;
}
