.container{
  position:absolute;
  flex-direction:column;
  width: 100%; 
  height: 100%;
  font-size:32rpx;
}
.body-top{
  position:absolute;
  height: 25%;
  width: 100%;
}
swiper,swiper-item,.img-banner{
  width: 100%;
  height: 100%;
}
.body-bottom{
  position: relative;
  width: 100%;
  height: 75%;
  top: 25%;
}
.bottom-left{
  float: left;
  height: 100%;
  width: 20%;
  background-color:#f5f0e9;
  z-index:1;
}
.bottom-right{
  float: right;
  height: 100%;
  width: 80%;
  background: yellow;
}
.food-type{
  width: 100%;
  height: 80%;
}
.food-cart{
  width: 100%;
  height: 20%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items:center;
  background: #F5F0EA;
}
.food-cart > image{
  width: 50%;
  height: 50%;
}
.food-types-img{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items:center;
}
.food-types-remark{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items:center;
  font-size:12px;
  color:gray;
}