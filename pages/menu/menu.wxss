.container{
  position:absolute;
  flex-direction:column;
  width: 100%; 
  height: 100%;
  font-size:32rpx;
  overflow-y: hidden;
}
.body-top{
  position:absolute;
  height: 22%;
  width: 100%;
}
swiper,swiper-item,.img-banner{
  width: 100%;
  height: 100%;
}
.body-middle{
  position: relative;
  flex-direction: row;
  width: 100%;
  height: 69%;
  top: 22%;
}
.bottom-view{
  position: absolute;
  width: 100%;
  height: 9%;
  top: 91%;
  background-color: #e02d3f
}
.middle-left{
  float: left; 
  height: 100%;
  width: 20%;
  background-color:#f5f0e9;
}
.middle-right{
  float: right; 
  height: 100%;
  width: 80%;
}
.food-types-img{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items:center;
}
.food-types-remark{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items:center;
  font-size:12px;
  color: gray;
}
.food-price{
  height: 100%;
  width: 48%;
  float: left;
  border-right: 1px solid white;
}
.choose-done{
  float: right;
  height: 100%;
  width: 30%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items:center;
}
.choose-done text{
  color:#fff;
  font-size:23px;
  font-weight:300;
}
.food-price{
  display: flex;
  flex-direction: row;
  align-items:center;
}
.food-price text{
  color:#fff;
  font-size:28px;
}
.cart-img{
  height: 100%;
  width: 20%;
  float: left;
  display: flex;
  flex-direction: row;
  align-items:center;
}
.cart-img image{
  width: 46%;
  height: 50%;
  padding-left:7px; 
}
.food-title{
  height:3%;
  width:100%;
  color:gray;
  font-size:12px;
  display: flex;
  flex-direction: row;
  align-items:center;
  justify-content: center;
}
.food-item{
  height:20%;
  width:100%;
}
.food-title,.food-item{
  border-bottom:1px solid #d6d3d3;
}
.food-intro-left{
  float: left;
  width: 39%;
  height: 100%;
}
.food-intro-right{
  float: right;
  width: 61%;
  height: 100%;
}
.food-name-view{
  width: 95%;
  height: 25%;
  opacity:.8;
  font-weight:500;
  font-size:15px;
  display: flex;
  flex-direction: row;
  align-items:center;
  justify-content: flex-end;
}
.food-price-view{
  width: 95%;
  height: 39%;
  display: flex;
  flex-direction: row;
  align-items:center;
  justify-content: flex-end;
  color:#e02d3f;
}
.price-symbol-view{
  font-size: 13px;
}
.price-view{
  font-size:28px;
  font-weight:600;
}
/* .food-reduce-view,.food-num-view,.food-add-view{ */
