.container{
  position:absolute;
  flex-direction:column;
  width: 100%; 
  height: 100%;
  font-size:32rpx;
  overflow-y: hidden;
}
.body-top{
  position:absolute;
  height: 22%;
  width: 100%;
}
swiper,swiper-item,.img-banner{
  width: 100%;
  height: 100%;
}
.body-middle{
  position: relative;
  flex-direction: row;
  width: 100%;
  height: 69%;
  top: 22%;
}
.bottom-view{
  position: absolute;
  width: 100%;
  height: 9%;
  top: 91%;
  background-color: #e02d3f
}
.middle-left{
  float: left; 
  height: 100%;
  width: 20%;
}
.middle-right{
  float: right; 
  height: 100%;
  width: 80%;
}
.food-type-off{
  height:20%;
  width:100%;
  background:#f5f0e9;
}
.food-type-on{
  height:20%;
  width:100%;
  background: white;
}
.before-item-bottom{
  border-bottom-right-radius: 8px;
}
.after-item-top{
  border-top-right-radius: 6px;
}
.food-type-top-view{
  height:60%;
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items:center; 
}
.food-types-img{
  height:100%;
  width:100%; 
}
 .checked-food-types-img{
  width:75%;
} 
.checked-num-view{
  float:right;
  width:20%;
  height:30%;
  margin-right: 5%;
  border-radius: 25px; 
  border:2px solid #e02d3f; 
  background-color: #e02d3f;  
  color: white;
  font-size:16px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items:center; 
}
.food-types-remark{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items:center;
  font-size:12px;
  color: gray;
}
.food-price{
  height: 100%;
  width: 48%;
  float: left;
  border-right: 1px solid white;
}
.choose-done{
  float: right;
  height: 100%;
  width: 30%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items:center;
}
.choose-done text{
  color:#fff;
  font-size:23px;
  font-weight:300;
}
.food-price{
  display: flex;
  flex-direction: row;
  align-items:center;
}
.food-price text{
  color:#fff;
  font-size:28px;
}
.cart-img{
  height: 100%;
  width: 20%;
  float: left;
  display: flex;
  flex-direction: row;
  align-items:center;
}
.cart-img image{
  width: 46%;
  height: 50%;
  padding-left:7px; 
}
.food-title{
  height:3%;
  width:100%;
  color:gray;
  font-size:12px;
  display: flex;
  flex-direction: row;
  align-items:center;
  justify-content: center;
}
.food-item{
  height:20%;
  width:100%;
}
.food-title,.food-item{
  border-bottom:1px solid #d6d3d3;
}
.food-intro-left{
  float: left;
  width: 39%;
  height: 100%;
}
.food-intro-right{
  float: right;
  width: 61%;
  height: 100%;
}
.food-name-view{
  width: 95%;
  height: 25%;
  opacity:.8;
  font-weight:500;
  font-size:15px;
  display: flex;
  flex-direction: row;
  align-items:center;
  justify-content: flex-end;
}
.food-price-view{
  width: 95%;
  height: 39%;
  display: flex;
  flex-direction: row;
  align-items:center;
  justify-content: flex-end;
  color:#e02d3f;
}
.price-symbol-view{
  font-size: 13px;
}
.price-view{
  font-size:28px;
  font-weight:600;
}
.food-reduce-view,.food-add-view{
  height: 50%;
  width: 10%;
  font-size:16px;
  color:#e02d3f;
  border:1px solid #d6d3d3;
  border-radius:37px;
  display: flex;
  flex-direction: row;
  align-items:center;
  justify-content: center;
}
.food-num-view{
  width: 30%;
}
.food-add-view{
  width: 30%;
}
.food-add-image,.food-num-view,.food-reduce-image{
  width: 20%;
  height: 90%;
  float: right;
  display: flex;
  flex-direction: row;
  align-items:center;
  justify-content: flex-end;
}
.food-num-view{
  justify-content: center;
}
.shop-cart-count{
  position: absolute;
  height: 35%;
  width: 5%;
  top: 2px;
  left: 10%;
  font-size: 16px;
  border-radius: 99px;
  background-color: #ff7b0f;
  color:#fff;
  text-align:center;
}