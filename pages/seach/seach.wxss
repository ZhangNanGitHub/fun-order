.common-style {
  width: 100%;
  height: 100%;
}

.center {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.container {
  position: absolute;
  flex-direction: column;
  font-size: 32rpx;
  letter-spacing: 1px;
  overflow-y: hidden;
  background: #d3d3d3;
}

.top {
  position: absolute;
  height: 7%;
  width: 100%;
  background: black;
}

.body {
  position: absolute;
  top: 8%;
  height: 92%;
  width: 100%;
}

.top-seach {
  width: 85%;
  height: 60%;
  background: white;
  padding-left: 3%;
  border-radius: 25px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.shop-item-view {
  width: 100%;
  height: 16%;
  margin-bottom: 1%;
  background: white;
}

.shop-logo {
  float: left;
  height: 100%;
  width: 30%;
}

.shop-right-view {
  float: right;
  height: 100%;
  width: 68%;
  padding-left: 2%;
}

.right-top {
  width: 100%;
  height: 40%;
}

.shop-dining-type {
  width: 100%;
  height: 30%;
  font-size: 12px;
  color: #8a8a8a;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.shop-address {
  width: 100%;
  height: 30%;
  display: flex;
  align-items: center;
}

.shop-address > text {
  font-size: 12px;
  color: #8a8a8a;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.shop-name {
  width: 60%;
  height: 100%;
  float: left;
  font-size: 20px;
  font-weight: bold;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.shop-distance {
  width: 35%;
  height: 100%;
  float: right;
  color: #8a8a8a;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  padding-right: 5%;
}
