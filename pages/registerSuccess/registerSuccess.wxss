.common-style {
  width: 100%;
  height: 100%;
}

.container {
  position: absolute;
  font-size: 32rpx;
  overflow-y: hidden;
  background: white;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.tips-text {
  position: absolute;
  top: 6%;
  width: 80%;
  height: 6%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 30px;
}

.tips-view {
  position: absolute;
  top: 17%;
  width: 80%;
  height: 20%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

image {
  width: 40%;
  height: 95%;
}

.login {
  position: absolute;
  top: 42%;
  width: 80%;
  height: 10%;
  background: red;
  color: white;
  font-size: 30px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 0 solid #f00;
  border-radius: 10rpx;
}
