<view class='container common-style' catchtouchmove='true'>
  <view class='top'>
    <image src='../img/my/changePwd.png' />
  </view>
  <view class='mobile input-view center'>
    <image src='../img/my/mobile.png' />
    <input class='input' placeholder='输入手机号' maxlength='11' type='number' />
  </view>
  <view class='pwd input-view center'>
    <image src='../img/my/pwd.png' />
    <input class='input' placeholder='输入新登录密码' maxlength='25' password='true' />
  </view>
  <view class='confirm-pwd input-view center'>
    <image src='../img/my/pwd.png' />
    <input class='input' placeholder='确认新登录密码' maxlength='25' password='true' />
  </view>
  <view class='auth-code input-view center'>
    <image src='../img/my/authCode.png' />
    <input class='auth-code-input' placeholder='输入手机验证码' maxlength='25' password='true' />
     <text class='get-auth-code'>获取验证码</text> 
  </view>
   <text class='last-button center'>提交</text> 
</view>