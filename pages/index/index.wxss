.common-style {
  width: 100%;
  height: 100%;
}

.center {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.container {
  position: absolute;
  flex-direction: column;
  font-size: 32rpx;
  letter-spacing: 1px;
  overflow-y: hidden;
  background: #d3d3d3;
}

.top, .banner-view, .middle, .bottom {
  width: 100%;
}

.top {
  position: absolute;
  height: 30%;
}

.middle {
  position: relative;
  top: 31%;
  height: 35%;
}

.bottom {
  position: absolute;
  top: 67%;
  height: 33%;
  background: white;
}

.shop-seach-view {
  position: relative;
  width: 100%;
  height: 20%;
  background: black;
}

.top-banner-view {
  width: 100%;
  height: 80%;
}

.top-search {
  width: 70%;
  height: 88%;
  background: white;
  border-radius: 25px;
}

.scan, .take-out {
  float: left;
  width: 49%;
}

.packing, .reserve {
  float: right;
  width: 50%;
}

.scan {
  height: 47%;
  padding-bottom: 1%;
}

.take-out {
  height: 49%;
}

.packing {
  height: 47%;
  padding-bottom: 1%;
}

.reserve {
  height: 49%;
}

.near-shop-title {
  height: 15%;
  width: 100%;
  color: #d3d3d3;
  font-size: 13px;
}

.near-shops-view {
  height: 85%;
  width: 100%;
}

.shop-item-view {
  width: 100%;
  height: 50%;
  margin-bottom: 10rpx;
}

.shop-logo {
  float: left;
  height: 100%;
  width: 30%;
}

.shop-right-view {
  float: right;
  height: 100%;
  width: 68%;
  padding-left: 2%;
}

.right-top {
  width: 100%;
  height: 40%;
}

.shop-dining-type {
  width: 100%;
  height: 30%;
  font-size: 12px;
  color: #515151;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.shop-address {
  width: 100%;
  height: 30%;
  display: flex;
  align-items: center;
}

.shop-address > text {
  font-size: 12px;
  color: #515151;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.shop-name {
  width: 60%;
  height: 100%;
  float: left;
  font-size: 20px;
  font-weight: bold;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.shop-distance {
  width: 35%;
  height: 100%;
  float: right;
  color: #515151;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  padding-right: 5%;
}
