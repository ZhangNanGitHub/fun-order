.common-style {
  width: 100%;
  height: 100%;
}

.center {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.container {
  position: absolute;
  font-size: 32rpx;
  overflow-y: hidden;
  background: #d3d3d3;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.top {
  position: absolute;
  top: 1%;
  width: 100%;
  height: 60%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.middle {
  position: absolute;
  top: 61%;
  width: 100%;
  height: 20%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.bottom {
  position: absolute;
  top: 82%;
  width: 100%;
  height: 10%;
}

.user-info-view {
  width: 90%;
  height: 15%;
  background: white;
  margin-bottom: 1%;
  border: 0 solid #f00;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.user-info-view > image {
  margin-left: 1%;
  width: 10%;
  height: 50%;
}

.input {
  padding-left: 2%;
  margin-left: 1%;
  width: 88%;
  border-left: 1px #d3d3d3 solid;
  color: #707070;
}

.auth-code-input {
  padding-left: 2%;
  margin-left: 1%;
  width: 55%;
  border-left: 1px #d3d3d3 solid;
  color: #707070;
}

.get-auth-code {
  width: 28%;
  height: 60%;
  font-size: 13px;
  border: 0 solid #f00;
  border-radius: 10rpx;
  background: #d3d3d3;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.text {
  padding-left: 2%;
  margin-left: 1%;
  width: 88%;
  border-left: 1px #d3d3d3 solid;
  color: #707070;
}

.sex-info-view {
  width: 90%;
  height: 40%;
  color: #707070;
  font-size: 25px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.sex-title {
  height: 98%;
  float: left;
  margin-left: 1%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.sex-radio-group {
  width: 70%;
  height: 98%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.sex-radio-group > radio {
  height: 100%;
  width: 20%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.protocol-view {
  margin-top: 2%;
  width: 90%;
  height: 60%;
}

.isagreed-view {
  width: 100%;
  height: 50%;
  margin-left: 1%;
}

.isagreed-text {
  margin-left: 4%;
  color: #707070;
  font-size: 16px;
}

.user-protocol {
  width: 90%;
  height: 58%;
  margin-left: 1%;
  color: red;
  font-weight: bold;
}

.user-protocol > text {
  height: 98%;
  width: 50%;
  margin-left: 10%;
}

.bottom > text {
  height: 95%;
  width: 90%;
  border: 0 solid #f00;
  border-radius: 10rpx;
  background: red;
  color: white;
  font-size: 29px;
}
