.common-style {
  width: 100%;
  height: 100%;
}

.center {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.container {
  position: absolute;
  font-size: 32rpx;
  overflow-y: hidden;
  background: #d3d3d3;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.top{
  position: absolute;
  top: 1%;
  width: 100%;
  height: 60%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.middle{
  position: absolute;
  top: 61%;
  width: 100%;
  height: 20%;
  background: yellow;
}
.bottom{
  position: absolute;
  top: 82%;
  width: 100%;
  height: 10%;
  background: green;
}
.user-info-view{
  width: 90%;
  height: 15%;
  background: white;
  margin-bottom: 1%;
  border: 0 solid #f00;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.user-info-view > image{
  margin-left: 1%;
  width: 10%;
  height: 50%;
}
.user-info-view > input{
  padding-left: 2%;
  margin-left: 1%;
  width: 88%;
  border-left: 1px #d3d3d3 solid;
  color: #707070;
}
.user-info-view > text{
  padding-left: 2%;
  margin-left: 1%;
  width: 88%;
  border-left: 1px #d3d3d3 solid;
  color: #707070;
}