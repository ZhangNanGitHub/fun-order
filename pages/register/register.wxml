<view class='container common-style' catchtouchmove='true'>
  <view class='top'>
    <view class='user-info-view'>
      <image src='../img/my/idCard.png' />
      <input class='input' maxlength='18' type='idcard' placeholder='身份证号' />
    </view>
    <view class='user-info-view'>
      <image src='../img/my/mobile.png' />
      <input class='input' maxlength='11' type='number' placeholder='手机号' />
    </view>
    <view class='user-info-view'>
      <image src='../img/my/authCode.png' />
      <input class='auth-code-input' maxlength='6' type='number' placeholder='手机验证码' placeholder-class='color:#707070' />
       <text class='get-auth-code'>获取验证码</text> 
    </view>
    <view class='user-info-view'>
      <image src='../img/my/nickName.png' />
      <input class='input' maxlength='12' placeholder='昵称' />
    </view>
    <view class='user-info-view'>
      <image src='../img/my/pwd.png' />
      <input class='input' maxlength='25' password='true' placeholder='登录密码' />
    </view>
    <view class='user-info-view'>
      <image src='../img/my/uploadHead.png' />
      <text class='text'>上传头像</text>
    </view>
  </view>
  <view class='middle'>
    <view class='sex-info-view'>
      <text class='sex-title'>性别：</text>
      <radio-group class='sex-radio-group'>
        <radio value='male' color='red' checked='true' />
        <text>男</text>
        <radio style='margin-left: 20px;' value='female' color='red' />
        <text>女</text>
      </radio-group>
    </view>
    <view class='protocol-view'>
      <view class='isagreed-view'>
        <checkbox-group>
          <checkbox value='true' color='red' />
          <text class='isagreed-text'>同意注册使用条款</text>
        </checkbox-group>
      </view>
       <view class='user-protocol'> 
        <text>用户协议</text>
        <text>隐私条款</text>
       </view> 
    </view>
  </view>
   <view class='bottom center'>
    <text class='center'>立即注册</text>
  </view> 
</view>