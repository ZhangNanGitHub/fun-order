.common-style {
  width: 100%;
  height: 100%;
}

.center {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.container {
  position: absolute;
  font-size: 32rpx;
  overflow-y: hidden;
  background: #d3d3d3;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.shop-info-view {
  position: absolute;
  width: 100%;
  height: 8%;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: white;
  margin-bottom: 1%;
}

.shop-logo-img {
  width: 10%;
  height: 86%;
  margin-left: 8px;
}

.shop-info-view > text {
  width: 90%;
  height: 86%;
  margin-left: 8px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.order-num-view {
  position: absolute;
  top: 9%;
  height: 6%;
  width: 100%;
  background: white;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.order-id-text {
  width: 90%;
  color: #707070;
  margin-left: 8px;
}

.order-status-text {
  width: 20%;
  color: #707070;
  font-size: 15px;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  margin-right: 5px;
}

.order-detail-view {
  position: absolute;
  top: 16%;
  height: 50%;
  width: 100%;
  background: white;
  margin-bottom: 2px;
}

.order-text-index-view {
  position: absolute;
  top: 67%;
  height: 22%;
  width: 100%;
}
.order-text-index-view > text{
  width: 100%;
  height: 25%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  background: white;
  border-bottom: 1px #d3d3d3 solid;
}
.order-operation-view {
  position: absolute;
  top: 90%;
  height: 10%;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  background: white;
}

.order-operation-view > text {
  float: right;
  height: 80%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-right: 5px;
  background: red;
  color: white;
  font-size: 23px;
}
.four-word-text{
  width: 30%;
}
.tow-word-text{
  width: 16%;
}
.detail-item-view {
  width: 100%;
  height: 14%;
  margin-left: 7px;
  border-bottom: 1px #d3d3d3 solid;
}

.set-meal-on, .set-meal-off {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.set-meal-off {
  height: 100%;
}

.set-meal-on {
  height: 60%;
}
.item-food-name,.item-original-price,.item-price,.item-num{
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;

}

.item-food-name {
  width: 35%;
  
}

.item-original-price {
  width: 20%;
  color: #d3d3d3;
  justify-content: flex-end;
  text-decoration:line-through;
}

.item-price {
  width: 20%;
  justify-content: flex-end;
}

.item-num {
  width: 20%;
  margin-right: 10px;
  font-size: 15px;
  color: #707070;
  justify-content: flex-end;
}
.son-food-info {
  width: 100%;
  height: 40%;
  color: #707070;
  font-size: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
}