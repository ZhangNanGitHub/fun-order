.container{
  position:absolute;
  flex-direction:column;
  width: 100%; 
  height: 100%;
  font-size:32rpx;
   background: #D3D3D3; 
}
.boby-top{
  position:absolute;
  flex-direction:row;
  display: flex;
  align-content:center;
  height: 8%;
  width: 100%;
  background: white;
}
.boby-middle{
  position:absolute;
  top: 10%;
  height: 50%;
  width: 100%;
  background: blue;
}
.boby-bottom{
  position:absolute;
  top: 60%;
  height: 40%;
  width: 100%;
  background: green;
}
.search-left{
  width:70%;
  height: 60%;
  border: 1rpx solid #D3D3D3;
  border-radius: 10rpx;
  margin-left: 2%;
  margin-top: 3%; 
}
.search-icon{
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: relative;
  left: 5rpx;
  top: 10rpx;
  z-index: 2;  
  width: 20rpx;
  height: 20rpx;
  text-align: center;
}
.search-input{
  margin-left: 60rpx;  
  height: 100%;  
  border-radius: 5px;
}
.search-button{
  width: 30%;
  height: 65%;
  line-height:200%;
  margin-top: 3%;  
  margin-left: 2%;
  margin-right: 2%;
}